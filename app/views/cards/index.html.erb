<p id="notice"><%= notice %></p>

<table border align="center">
    <caption>
        <font size="5"><strong>所持カード一覧</strong></font>
        <font size="3"><strong>所持枚数 <%= @cards.size %> 枚</strong></font>
        <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#modal-register">新規登録</button>
    </caption>
    <tr>
        <th width="30%">カード番号</th>
        <th width="30%">カード名</th>
        <th width="30%">入力日</th>
        <th width="10%">削除</th>
    </tr>
    <% @cards.each do |card| %>
        <tr>
            <td><%= card.card_id %></td>
            <td><%= card.name %></td>
            <td><%= card.created_at %></td>
            <td>
                <input type="hidden" name="card" value=<%= card %>>
                <button type="submit" class="btn btn-primary">削除</button>
            </td>
        </tr>
    <% end %>
</table>

<!-- モーダルの配置 -->
<div class="modal fade" id="modal-register" tabindex="-1">
    <form action="register" method="post">
        <div class="modal-dialog modal-sm">

            <!-- モーダルのコンテンツ -->
            <div class="modal-content">
                <!-- モーダルのヘッダ -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="modal-label">新規追加</h4>
                </div>
                <!-- モーダルのボディ -->
                <div class="modal-body">
                    <label>カード番号</label>
                    <input type="text" name="card_id">
                    <label>カード名</label>
                    <input type="text" name="name">
                </div>
                <!-- モーダルのフッタ -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
                    <button type="submit" class="btn btn-primary">新規追加</button>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- モーダルの配置 -->
<div class="modal fade" id="modal-delete-all" tabindex="-1">
    <div class="modal-dialog modal-sm">

        <!-- モーダルのコンテンツ -->
        <div class="modal-content">
            <!-- モーダルのヘッダ -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modal-label">ダイアログ</h4>
            </div>
            <!-- モーダルのボディ -->
            <div class="modal-body">
                本当に一括削除してもよろしいですか？
            </div>
            <form action="delete_all" method="post">
                <!-- モーダルのフッタ -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
                    <button type="submit" class="btn btn-danger">一括削除</button>
                </div>
            </form>
        </div>
    </div>
</div>


