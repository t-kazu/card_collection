<p id="notice"><%= notice %></p>

<table border align="center">
    <caption>
        <font size="5"><strong>所持カード一覧</strong></font>
    </caption>
    <tr>
        <th width="35%">カード番号</th><th width="35%">カード名</th><th width="30%">入力日
    </tr>
    <% @cards.each do |card| %>
        <tr>
            <td><%= card.card_id %></td>
            <td><%= card.name %></td>
            <td><%= card.created_at %></td>
        </tr>
    <% end %>
</table>

